
@{
    ViewBag.Title = "Index";
}

<h3><span class="fa-stack fa-2x"><i class="fa fa-mail-reply fa-stack-1x"></i></span> Wiadomości</h3>
<row>
    <div class="col-lg-4 col-lg-offset-4">
        <form role="form">
            <div class="form-group">
                <label>Temat</label>
                <input data-bind="text: topic" class="form-control" />
            </div>
            <div class="form-group">
                <label>Wiadomość</label>
                <textarea data-bind="text: content" rows="5" cols="25" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" style="align-items:center" class="btn btn-info">Send </button>
            </div>
        </form>
    </div>
</row>