    ViewBag.Title = "News";
}
<script src="~/Scripts/Service/Index.js"></script>
<div class="col-sm-4 animated fadeIn">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Oferty specjalne</h3>
        </div>
        <div class="panel-body">
            <p style="padding-left:15px">
                <a href="#"><span class="glyphicon glyphicon-pushpin"></span></a>
                &nbsp;Uwaga! Z okazji sezonu zimowego wymiana opon -20% !!!
            </p> 
            <p style="padding-left:15px">
                <a href="#"><span class="glyphicon glyphicon-pushpin"></span></a>
                &nbsp;Przy wymianie filtrów i nabijaniu klimatyzacji, mycie auta GRATIS!
            </p> 
        </div>
    </div>
