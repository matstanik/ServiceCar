<div class="col-sm-4 animated fadeIn">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Wykonywane usługi</h3>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="text-align:center">Nazwa</th>
                            <th style="text-align:center">Przybliżona Cena</th>
                        </tr>
                    </thead>
                    <tbody style="text-align:center" data-bind="foreach: serviceList">
                        <tr>
                            <td data-bind="text: Description"></td>
                            <td data-bind="text: Price">zł</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script src="~/Scripts/Service/Index.js"></script>
