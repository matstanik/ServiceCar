@model PracaInzynierska.Models.Entities.User

@{
    ViewBag.Title = "Create";
}
@Html.AntiForgeryToken()
<script src="~/Scripts/Worker/Index.js"></script>
<h3><span class="fa-stack fa-2x"><i class="fa fa-user fa-stack-1x"></i></span> Lista pracowników</h3>
<button class="btn btn-sm btn-info navbar-btn" data-toggle="modal" data-target="#addWorker">Dodaj pracownika</button>
<table class="table table-striped">
    <thead>
        <tr>
            <th style="text-align:center">Imię</th>
            <th style="text-align:center">Nazwisko</th>
            <th style="text-align:center">Numer kontatkowy</th>
            <th style="text-align:center">Miasto</th>
            <th style="text-align:center">Kod pocztowy</th>
            <th style="text-align:center">Ulica</th>
            <th style="text-align:center">Nr. mieszkania</th>
            <th style="text-align:center">Pozycja</th>
            <th style="text-align:center">Data zatrudnienia</th>
            <th style="text-align:center">Data zwolnienia</th>
        </tr>
    </thead>
    <tbody style="text-align:center" data-bind="foreach: workersList">
        <tr>
            <td data-bind="text: Name"></td>
            <td data-bind="text: Surname"></td>
            <td data-bind="text: PhoneNumber"></td>
            <td data-bind="text: City"></td>
            <td data-bind="text: PostalCodeNumber"></td>
            <td data-bind="text: StreetName"></td>
            <td data-bind="text: HouseNumber"></td>
            <td data-bind="text: PositionName"></td>
            <td data-bind="text: DateOfEmployment"></td>
            <td data-bind="text: DateOfRelease"></td>
        </tr>
    </tbody>
</table>



<div id="addWorker" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Dodanie pracownka do bazy</h4>
            </div>
            <div class="modal-body">
            <div class="row">
            <div class="col-lg-6">
            <div class="form-group">
                <label>Imię</label>
                <input class="form-control" id="name" name="name" placeholder="Podaj imię" />
            </div>
            <div class="form-group">
                <label>Nazwisko</label>
                <input class="form-control" id="surname" name="surname" placeholder="Podaj nazwisko" />
            </div>
            <div class="form-group">
                <label>Rola</label>
                <select id="role" name="role" class="form-control"
                        data-bind="options: rolesList, optionsCaption: 'Wybierz rolę'"></select>
            </div>
            <div class="form-group">
                <label>Płeć</label>
                <select id="sex" name="sex" class="form-control"
                        data-bind="options: sexsList, optionsCaption: 'Wybierz płeć'"></select>
            </div>
            <div class="form-group">
                <label>Numer telefonu</label>
                <input class="form-control" id="phoneNumber" name="phoneNumber" placeholder="Podaj nr. telefonu" />
            </div>
            <div class="form-group">
                <label>Ulica</label>
                <input class="form-control" id="street" name="street" placeholder="Podaj ulicę" />
            </div>
            <div class="form-group">
                <label>Numer budynku</label>
                <input class="form-control" id="houseNumber" name="houseNumber" placeholder="Podaj numer budynku" />
            </div>
        </div>
        <div class="col-md-6">            
            <div class="form-group">
                <label>Miasto</label>
                <input class="form-control" id="city" name="city" placeholder="Podaj miasto" />
            </div>
            <div class="form-group">
                <label>Kod pocztowy</label>
                <input class="form-control" id="postalCode" name="postalCode" placeholder="Podaj kod pocztowy" />
            </div>
            <div class="form-group">
                <label>Nazwa stanowiska</label>
                <input class="form-control" id="positionName" name="positionName" placeholder="Podaj nazwę pozycji" />
            </div>
            <div class="form-group">
                <label>Data zatrudnienia</label>
                <input class="form-control" id="employDate" name="employDate" placeholder="Podaj datę zatrudnienia" />
            </div>
            <div class="form-group">
                <label>Data zwolnienia</label>
                <input class="form-control" id="releaseDate" name="releaseDate" placeholder="Podaj datę zwonienia" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" id="email" name="email" placeholder="Podaj email" />
            </div>
            <div class="form-group">
                <label>Hasło</label>
                <input class="form-control" id="password" name="password" placeholder="Podaj hasło" />
            </div>
        </div>

    </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-info navbar-btn" data-bind="click: AddWorker">Zapisz</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>



@section Scripts{
    <script src="~/Scripts/Worker/Index.js"></script>
    <script>

        var wo = new Workers();
        ko.applyBindings(wo);
        wo.List();

    </script>
}
